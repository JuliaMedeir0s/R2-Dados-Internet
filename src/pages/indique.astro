---
import Layout from "@/layouts/Layout.astro";
import Banner from "@/components/Banner";
---

<Layout>
  <img src="/banners/indique.png" alt="indique" class="max-lg:hidden" />
  <img src="/banners/indiqueMobile.png" alt="indique" class="hidden max-lg:block" />
  <section class="py-8 md:py-16 bg-secondary">
    <div class="container mx-auto px-4">
      <div class="text-center mb-8 md:mb-8">
        <h2 class="text-3xl md:text-4xl font-bold font-montserrat text-white">Promoção</h2>
        <h3 class="text-3xl md:text-4xl font-bold font-montserrat text-white mb-4">
          Indique e <span class="text-[#ffb800]">Ganhe!</span>
        </h3>
        <div class="space-y-3 md:space-y-4 max-w-4xl mx-auto">
          <p class="text-white text-sm md:text-lg font-montserrat">
            Indique amigos para a R2 e ganhe R$30,00 de desconto na sua fatura a
            cada indicação contratada!
            <br />
            É fácil, rápido e sem limite de indicações. Quanto mais você indica,
            mais você economiza!
          </p>
        </div>
      </div>

      <div class="max-w-md md:max-w-3xl mx-auto">
        <!-- Mensagem de sucesso -->
        <div id="success-message" class="hidden mb-6 p-4 bg-green-500 text-white rounded-2xl text-center font-montserrat shadow-lg">
          <p class="font-bold">✅ Indicação enviada com sucesso!</p>
          <p class="text-sm mt-1">Obrigado por indicar a R2 Internet!</p>
        </div>

        <!-- Mensagem de erro -->
        <div id="error-message" class="hidden mb-6 p-4 bg-red-500 text-white rounded-2xl text-center font-montserrat shadow-lg">
          <p class="font-bold">❌ Erro ao enviar indicação</p>
          <p class="text-sm mt-1">Por favor, tente novamente.</p>
        </div>

        <form id="indique-form" class="bg-white rounded-3xl p-6 md:p-8 shadow-xl space-y-4 md:space-y-5">
          <!-- CPF do Titular -->
          <div class="flex items-center border-2 border-secondary rounded-full px-4 py-2.5 md:py-3 gap-2 md:gap-3 focus-within:ring-2 focus-within:ring-[#ff6600] transition-all">
            <svg class="w-5 h-5 md:w-6 md:h-6 text-secondary flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H5a2 2 0 00-2 2v9a2 2 0 002 2h14a2 2 0 002-2V8a2 2 0 00-2-2h-5m-4 0V5a2 2 0 114 0v1m-4 0a2 2 0 104 0m-5 8a2 2 0 100-4 2 2 0 000 4zm0 0c1.306 0 2.417.835 2.83 2M9 14a3.001 3.001 0 00-2.83 2M15 11h3m-3 4h2"></path>
            </svg>
            <input
              type="text"
              name="cpf"
              placeholder="CPF do Titular do Contrato *"
              class="w-full bg-transparent outline-none text-secondary placeholder:text-secondary/60 font-montserrat text-sm md:text-base"
              required
            />
          </div>

          <!-- Nome do Indicado -->
          <div class="flex items-center border-2 border-secondary rounded-full px-4 py-2.5 md:py-3 gap-2 md:gap-3 focus-within:ring-2 focus-within:ring-[#ff6600] transition-all">
            <svg class="w-5 h-5 md:w-6 md:h-6 text-secondary flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
            </svg>
            <input
              type="text"
              name="nomeindicado"
              placeholder="Nome do Indicado *"
              class="w-full bg-transparent outline-none text-secondary placeholder:text-secondary/60 font-montserrat text-sm md:text-base"
              required
            />
          </div>

          <!-- Telefone e Cidade em linha -->
          <div class="flex flex-col md:flex-row gap-4">
            <!-- Telefone do Indicado -->
            <div class="flex-1 flex items-center border-2 border-secondary rounded-full px-4 py-2.5 md:py-3 gap-2 md:gap-3 focus-within:ring-2 focus-within:ring-[#ff6600] transition-all">
              <svg class="w-5 h-5 md:w-6 md:h-6 text-secondary flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
              </svg>
              <input
                type="tel"
                name="telind"
                placeholder="Telefone do Indicado *"
                class="w-full bg-transparent outline-none text-secondary placeholder:text-secondary/60 font-montserrat text-sm md:text-base"
                required
              />
            </div>

            <!-- Cidade do Indicado -->
            <div class="flex-1 flex items-center border-2 border-secondary rounded-full px-4 py-2.5 md:py-3 gap-2 md:gap-3 focus-within:ring-2 focus-within:ring-[#ff6600] transition-all">
              <svg class="w-5 h-5 md:w-6 md:h-6 text-secondary flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
              </svg>
              <input
                type="text"
                name="endind"
                placeholder="Cidade do Indicado *"
                class="w-full bg-transparent outline-none text-secondary placeholder:text-secondary/60 font-montserrat text-sm md:text-base"
                required
              />
            </div>
          </div>

          <!-- E-mail (opcional) -->
          <div class="flex items-center border-2 border-secondary rounded-full px-4 py-2.5 md:py-3 gap-2 md:gap-3 focus-within:ring-2 focus-within:ring-[#ff6600] transition-all">
            <svg class="w-5 h-5 md:w-6 md:h-6 text-secondary flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
            </svg>
            <input
              type="email"
              name="email"
              placeholder="E-mail (opcional)"
              class="w-full bg-transparent outline-none text-secondary placeholder:text-secondary/60 font-montserrat text-sm md:text-base"
            />
          </div>

          <!-- Botão de envio -->
          <button
            type="submit"
            id="submit-btn"
            class="w-full rounded-full bg-[#ff6600] hover:bg-[#e65c00] text-white font-bold font-montserrat text-sm md:text-base py-3 md:py-3.5 mt-4 transition-all shadow-lg hover:shadow-xl hover:brightness-110 disabled:opacity-70 disabled:cursor-not-allowed uppercase"
          >
            Enviar Indicação!
          </button>
        </form>
      </div>
    </div>
  </section>
</Layout>

<script is:inline>
  document.addEventListener('DOMContentLoaded', function() {
    const form = document.getElementById('indique-form');
    const submitBtn = document.getElementById('submit-btn');
    const successMessage = document.getElementById('success-message');
    const errorMessage = document.getElementById('error-message');

    form.addEventListener('submit', async function(e) {
      e.preventDefault();
      
      const formData = new FormData(form);
      const originalText = submitBtn.textContent;
      
      // Esconder mensagens anteriores
      successMessage.classList.add('hidden');
      errorMessage.classList.add('hidden');
      
      // Desabilitar botão e mostrar loading
      submitBtn.disabled = true;
      submitBtn.textContent = 'Enviando...';

      // Preparar dados para envio
      const dataAtual = new Date().toLocaleDateString('pt-BR');
      const formDataToSend = {
        cpf: formData.get('cpf'),
        nomeindicado: formData.get('nomeindicado'),
        telind: formData.get('telind'),
        endind: formData.get('endind'),
        email: formData.get('email'),
        data: dataAtual
      };

      const scriptURL = 'https://script.google.com/macros/s/AKfycbwbSD8-dmiWJSOCvJTGIEUPn-_c1Nk932vBxfCQpfXnasTnvZz7nRBOZababPxJ5C9I/exec';

      try {
        // Enviar para Google Sheets
        const sheetsFormData = new FormData();
        sheetsFormData.append('cpf', formDataToSend.cpf);
        sheetsFormData.append('nomeindicado', formDataToSend.nomeindicado);
        sheetsFormData.append('telind', formDataToSend.telind);
        sheetsFormData.append('endind', formDataToSend.endind);
        sheetsFormData.append('email', formDataToSend.email || '');
        sheetsFormData.append('data', formDataToSend.data);

        const sheetsResponse = await fetch(scriptURL, {
          method: 'POST',
          body: sheetsFormData,
        });

        // Log para debug
        console.log('Sheets response status:', sheetsResponse.status);
        console.log('Sheets response headers:', sheetsResponse.headers.get('content-type'));

        // Verificar se a resposta é JSON antes de parsear
        const contentType = sheetsResponse.headers.get('content-type');
        let sheetsResult;
        
        if (contentType && contentType.includes('application/json')) {
          sheetsResult = await sheetsResponse.json();
          console.log('Sheets result:', sheetsResult);
        } else {
          // Se não for JSON, ler como texto para debug
          const textResponse = await sheetsResponse.text();
          console.log('Sheets response (text):', textResponse);
          
          // Se recebeu HTML, significa que o script não está configurado corretamente
          // Mas vamos considerar sucesso se o status for 200/302
          if (sheetsResponse.ok || sheetsResponse.status === 302) {
            sheetsResult = { result: 'success' };
          } else {
            throw new Error('Resposta inválida do Google Sheets. Verifique o script.');
          }
        }

        if (sheetsResult.result === 'success') {
          // Mostrar mensagem de sucesso imediatamente
          successMessage.classList.remove('hidden');
          form.reset();
          
          // Scroll suave para a mensagem
          successMessage.scrollIntoView({ behavior: 'smooth', block: 'center' });
          
          // Esconder mensagem após 5 segundos
          setTimeout(() => {
            successMessage.classList.add('hidden');
          }, 5000);
        } else {
          throw new Error('Erro ao enviar formulário.');
        }
      } catch (error) {
        console.error('Erro:', error);
        errorMessage.classList.remove('hidden');
        
        // Scroll suave para a mensagem
        errorMessage.scrollIntoView({ behavior: 'smooth', block: 'center' });
        
        // Esconder mensagem após 5 segundos
        setTimeout(() => {
          errorMessage.classList.add('hidden');
        }, 5000);
      } finally {
        submitBtn.disabled = false;
        submitBtn.textContent = originalText;
      }
    });
  });
</script>
